<Window
        x:Class="Cicada.NoSessionFlyout"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cicada"
        mc:Ignorable="d"
        AllowsTransparency="True"
        Background="#242424" BorderThickness="0"
        WindowStyle="None" ShowInTaskbar="False"
        Topmost="True" ResizeMode="NoResize"
        Width="230" Height="50">
    
    <Window.Clip>
        <RectangleGeometry RadiusX="8" RadiusY="8"
                           Rect="0,0,230,50"/>
    </Window.Clip>

    <StackPanel Orientation="Horizontal" Margin="12">
        <TextBlock FontFamily="Segoe Fluent Icons" Text="&#xE890;"
                   Foreground="White" FontSize="24"
                   Margin="0 0 8 0"/>
        <TextBlock x:Name="VolumeText"
                        FontFamily="Segoe UI" Foreground="White"
                        VerticalAlignment="Center" FontSize="14"
                        Text="Couldn't find Audio Session" Width="170"/>
    </StackPanel>
</Window>
