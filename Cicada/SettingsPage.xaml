<Window x:Class="Cicada.Flyouts.SettingsPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:local="clr-namespace:Cicada.Flyouts"
        WindowStyle="None" AllowsTransparency="True"
        Background="Transparent" ResizeMode="NoResize"
        SizeToContent="Height"
        Width="230" Height="350"
        Title="SettingsPage">

    <Window.Resources>
        <Style x:Key="RoundedTextBox" TargetType="TextBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#333"/>
            <Setter Property="BorderBrush" Value="#111"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="Border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost"
                                      VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#242424" CornerRadius="6"
            BorderBrush="#111" BorderThickness="1">
        <StackPanel Orientation="Vertical">
            <!--TITLE_BAR-->
            <Border Background="#1a1a1a" Padding="8"
                    CornerRadius="6 6 0 0">
                <Grid>
                    <Image Source="/cicada.ico" Width="16"
                            HorizontalAlignment="Left"/>
                    <TextBlock Text="Settings" FontFamily="Segoe UI"
                                Foreground="White" FontWeight="DemiBold"
                                FontSize="12" Height="16"
                                Margin="24 0 0 0">
                    </TextBlock>
                    <Button Background="PaleVioletRed"
                            Width="16" Height="16"
                            x:Name="CloseButton"
                            Click="CloseButton_Click"
                            Padding="0 0 0 0"
                            BorderThickness="0"
                            HorizontalAlignment="Right">
                    </Button>
                </Grid>
            </Border>
            <!--HOTKEY_SETTINGS-->
            <Border BorderThickness="1" Margin="8"
                    CornerRadius="4" Background="#2a2a2a"
                    BorderBrush="#111">
                <StackPanel>
                    <Border Background="#1e1e1e" Margin="0 0 0 0"
                            Padding="0 3 0 0" CornerRadius="3.5 3.5 0 0"
                            Height="24">
                        <TextBlock Text="Hotkey Settings"
                                    FontFamily="Segoe UI" FontWeight="DemiBold"
                                    TextAlignment="Center" FontSize="12" 
                                    Foreground="White" />
                    </Border>
                    <Grid>
                        <TextBlock Text="Volume Up:" FontFamily="Segoe UI"
                                    Foreground="White" Margin="8"
                                    FontSize="12" Height="16"/>
                        <TextBox Style="{StaticResource RoundedTextBox}"
                                    HorizontalAlignment="Right" Width="100"
                                    Margin="4" TextAlignment="Right">
                            Alt + F6
                        </TextBox>
                    </Grid>
                    <Grid>
                        <TextBlock Text="Volume Down:" FontFamily="Segoe UI"
                                    Foreground="White" Margin="8"
                                    FontSize="12" Height="16"/>
                        <TextBox Style="{StaticResource RoundedTextBox}"
                                    HorizontalAlignment="Right" Width="100"
                                    Margin="4" TextAlignment="Right">
                            Alt + F7
                        </TextBox>
                    </Grid>
                    <Grid>
                        <TextBlock Text="Mute Audio:" FontFamily="Segoe UI"
                                    Foreground="White" Margin="8"
                                    FontSize="12" Height="16"/>
                        <TextBox Style="{StaticResource RoundedTextBox}"
                                    HorizontalAlignment="Right" Width="100"
                                    Margin="5" TextAlignment="Right">
                            Alt + F8
                        </TextBox>
                    </Grid>
                    <Grid>
                        <TextBlock Text="Isolate Audio:" FontFamily="Segoe UI"
                                    Foreground="White" Margin="8"
                                    FontSize="12" Height="16"/>
                        <TextBox Style="{StaticResource RoundedTextBox}"
                                    HorizontalAlignment="Right" Width="100"
                                    Margin="4" TextAlignment="Right">
                            Alt + M
                        </TextBox>
                    </Grid>
                </StackPanel>
            </Border>
            <!--BEHAVIOUR_SETTINGS-->
            <Border BorderThickness="1" Margin="8 0 8 8"
                    CornerRadius="4" Background="#2a2a2a"
                    BorderBrush="#111">
                <StackPanel>
                    <TextBlock Text="Behaviour Settings" Background="#1e1e1e"
                               FontFamily="Segoe UI" FontWeight="DemiBold"
                               TextAlignment="Center"
                               Foreground="White" Margin="0 0 0 0" Padding="0 3 0 0"
                               FontSize="12" Height="24"/>
                    <Grid>
                        <TextBlock Text="Run on Startup:" FontFamily="Segoe UI"
                                   Foreground="White" Margin="8"
                                   FontSize="12" Height="16"/>
                        <CheckBox Background="#1e1e1e"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Right"
                                  BorderThickness="0.7" BorderBrush="#111"
                                  Margin="-6 0" IsChecked="False">
                        </CheckBox>
                    </Grid>
                    <Grid>
                        <TextBlock Text="Volume Step:" FontFamily="Segoe UI"
                                   Foreground="White" Margin="8"
                                   FontSize="12" Height="16"/>
                        <TextBox Style="{StaticResource RoundedTextBox}"
                                 HorizontalAlignment="Right" Width="50"
                                 Margin="4" TextAlignment="Right">
                            2
                        </TextBox>
                    </Grid>
                    <TextBlock Text="C:\Users\BON0015\source\repos\Cicada\Cicada\bin\Debug\net8.0-windows\Cicada.exe"
                               FontFamily="Segoe UI" TextWrapping="WrapWithOverflow"
                               Foreground="Gray" Margin="8 0 8 8"
                               FontSize="9"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Border>
</Window>
