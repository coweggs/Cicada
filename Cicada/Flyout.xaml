<Window
        x:Class="Cicada.Flyout"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cicada"
        mc:Ignorable="d"
        AllowsTransparency="True"
        Background="#242424" BorderThickness="0"
        WindowStyle="None" ShowInTaskbar="False"
        Topmost="True" ResizeMode="NoResize"
        Width="190" Height="50">
    
    <Window.Clip>
        <RectangleGeometry RadiusX="8" RadiusY="8"
                           Rect="0,0,190,50"/>
    </Window.Clip>
    
    <StackPanel Orientation="Horizontal" Margin="12">
        <Image x:Name="AppIconImage"
                    Source="/cicada.ico" Width="24" Height="24"
                    Margin="0 0 10 0"/>
        <Border Width="105">
            <Border Width="105" Height="5" CornerRadius="3"
                        Background="#9f9f9f">
                <Border x:Name="SliderBar"
                            Width="45.76" Height="5" CornerRadius="3"
                            HorizontalAlignment="Left"
                        Background="#4cc2ff"/>
            </Border>
        </Border>
        <TextBlock x:Name="VolumeText"
                        FontFamily="Segoe UI" TextAlignment="Center"
                        VerticalAlignment="Center" FontSize="14"
                        Margin="5 0 0 0"
                        Text="32" Width="22" Foreground="White"/>
    </StackPanel>
</Window>
